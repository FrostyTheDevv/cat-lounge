# ==================================================
# IMPORTANT: COPY THIS TO .env AND FILL IN YOUR VALUES
# NEVER commit the actual .env file to version control!
# ==================================================

# JWT Secrets (Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('base64'))")
JWT_SECRET=your-secret-key-here-generate-a-long-random-string
JWT_REFRESH_SECRET=your-refresh-secret-here-generate-a-long-random-string

# CSRF Secret (Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('base64'))")
CSRF_SECRET=your-csrf-secret-here-generate-a-long-random-string

# Admin Credentials (DEPRECATED - Now uses Discord OAuth)
# ADMIN_USERNAME=your-admin-username
# ADMIN_PASSWORD=your-secure-admin-password

# Discord Bot Configuration
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_GUILD_ID=your-discord-server-id
DISCORD_MEMBER_ROLE_ID=your-member-role-id

# Discord OAuth2 Configuration (Required for admin authentication)
DISCORD_CLIENT_ID=your-oauth2-client-id
DISCORD_CLIENT_SECRET=your-oauth2-client-secret
DISCORD_REDIRECT_URI=http://localhost:3000/api/auth/discord/callback

# Quiz Archetype Role IDs
QUIZ_ROLE_SOFT_CUDDLY=role-id-here
QUIZ_ROLE_CHAOS_GOBLIN=role-id-here
QUIZ_ROLE_ROYAL_FANCY=role-id-here
QUIZ_ROLE_COOL_ALLEY=role-id-here
QUIZ_ROLE_WISE_OLD=role-id-here
QUIZ_ROLE_ADVENTUROUS_HUNTER=role-id-here

# Environment
NODE_ENV=development
